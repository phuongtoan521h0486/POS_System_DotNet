    <section class="dashboard-light">
      <div class="dash-content">
        <div class="overview">
          <div class="flex-1 overflow-x-hidden overflow-y-auto">
            <div class="container mx-auto px-4 py-4">
              <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <div class="mb-4">
                  <h1 class="text-xl font-semibold">Staff management</h1>
                </div>
                <div class="mb-4">
                  <div class="flex justify-between items-center">
                    <div class="text-lg font-semibold">All staffs</div>
                    <div>
                      <button class="ml-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                        onclick="location.href='/User/Add'">
                        Add staff
                      </button>
                    </div>
                  </div>
                  <div class="mt-4">
                    <input
                      class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                      id="search" type="text" placeholder="Search by email, phone number, employee name" />
                  </div>
                </div>
                <div class="mb-4">
                  <table id="table" class="min-w-full leading-normal">
                    <thead>
                      <tr>
                        <th
                          class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semi-bold text-gray-600 uppercase tracking-wider">
                          Avatar
                        </th>

                        <th
                          class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semi-bold text-gray-600 uppercase tracking-wider">
                          Employee's Name
                        </th>
                        <th
                          class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semi-bold text-gray-600 uppercase tracking-wider">
                          Phone number
                        </th>
                        <th
                          class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semi-bold text-gray-600 uppercase tracking-wider">
                          Email
                        </th>
                        <th
                          class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semi-bold text-gray-600 uppercase tracking-wider">
                          Is Activate
                        </th>
                        <th
                          class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semi-bold text-gray-600 uppercase tracking-wider">
                          Action
                        </th>
                        <!-- Add more table headers as needed -->
                      </tr>
                    </thead>
                    <form id="user-info" method="post">
                      <tbody>
                          @foreach (var staff in Model) 
                          {
                             <tr>
                          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                            <span class="avatar avatar-soft-secondary avatar-circle">
                                @if (staff.Picture != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(staff.Picture)" class="avatar-initials">
                                }
                                else
                                {
                                     <img src="/images/avatar-default.svg" class="avatar-initials">                               
                                }
                                                       
                            </span>
                          </td>

                          <td 
                            class="px-5 py-5 border-b border-gray-200 bg-white text-sm">@staff.FullName</td>
                          <td  class="px-5 py-5 border-b border-gray-200 bg-white text-sm">@staff.Phone</td>
                          <!-- Add more columns with employee data as needed -->
                          <td  class="px-5 py-5 border-b border-gray-200 bg-white text-sm">@staff.Email</td>
                          <td 
                            class="px-5 py-5 border-b border-gray-200 bg-white text-sm"
                            id="@(staff.IsActivate ? "activated":"not-activated")">@(staff.IsActivate ? "Activated":"Not-Activated")</td>
                          <!-- Button at the end of the row -->
                          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
             
                            <div class="btn-group">
                                @if (staff.Status) {
                                     <button data-id="@staff.AccountId" type="button"
                                        class="btn l-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded btn-block">
                                        Block
                                      </button>
                                }
                                else {
                                    <button  data-id="@staff.AccountId" type="button"
                                        class="btn l-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded btn-enable">
                                        Enable
                                      </button>
                                }
                              <button type="button"
                                class="btn ml-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-2 rounded"
                                data-bs-toggle="dropdown" aria-expanded="false" data-bs-reference="parent">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                  stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 9l-7 7-7-7" />
                                </svg>
                              </button>
                              <ul class="dropdown-menu">
                                <li>
                                  <a type="submit" data-id="@staff.AccountId" class="dropdown-item"
                                    id="btn-delete">Delete</a>
                                </li>
                                <li>
                                    @if(!staff.IsActivate) {
                                        <a type="submit" 
                                    data-id="@staff.AccountId" class="dropdown-item" id="btn-resend">Resend
                                    email</a>
                                    }
                                  
                                </li>
                              </ul>
                            </div>
                          </td>
                        </tr>                       
                          }
                                                
                      </tbody>
                    </form>
                  </table>
                </div>
                <div class="flex justify-between items-center">
                  <div>
                    <!-- Pagination -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
