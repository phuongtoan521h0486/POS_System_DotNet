  <script src="~/script.js"></script>
  <script>
    $(".btn-block").click((e) => {
      const btn = e.target;
      const id = $(btn).data("id");
      console.log(id);
      $("#user-info").attr("action", "User/Block/" + id);
      $("#user-info").submit();
    });

    $(".btn-enable").click((e) => {
      const btn = e.target;
      const id = $(btn).data("id");
      console.log(id);
      $("#user-info").attr("action", "User/Enable/" + id);
      $("#user-info").submit();
    });

    $(document).on("click", "#btn-delete", function (e) {
      const btn = e.target;
      const id = $(btn).data("id");

      if (confirm("Are you sure you want to delete this user?")) {
        $.ajax({
          type: "POST",
          url: "User/Delete/" + id,
          success: function (response) {
            console.log("User deleted successfully");
            location.reload();
          },
          error: function (error) {
            console.error("Error deleting user", error);
          }
        });
      }
    });

    $(document).on("click", "#btn-resend", function (e) {
      const btn = e.target;
      const id = $(btn).data("id");

      // AJAX request to resend email
      $.ajax({
        type: "POST",
        url: "User/Resend/" + id,
        success: function (response) {
          console.log("Email resend initiated successfully");
        },
        error: function (error) {
          console.error("Error initiating email resend", error);
        }
      });
    });


  </script>

